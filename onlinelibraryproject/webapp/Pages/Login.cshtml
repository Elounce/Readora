@page
@model webapp.Pages.LoginModel
@{
	ViewData["Title"] = "Авторизация";
}

<div class="container login-block">
	<h2>Авторизация</h2>
	<form asp-page-handler="authorization" method="post">
		<div class="form-group">
			<input asp-for="Email" placeholder="Почта" />
			<span asp-validation-for="Email" class="error"></span>
		</div>
		<div class="form-group">
			<input asp-for="Password" placeholder="Пароль" />
			<span asp-validation-for="Password" class="error"></span>
		</div>

		<button type="submit">Войти</button>
	</form>

	<button type="button" onclick="location.href='@Url.Page("/Registration")'">Зарегистрироваться</button>
	<button type="button" onclick="location.href='@Url.Page("/Admin/Panel")'">admintest</button>
</div>
