@page
@model webapp.Pages.RegistrationModel
@{
	ViewData["Title"] = "Регистрация";
}

<div class="container registration-block">
	<h2>Регистрация</h2>
	<form method="post">
		<div class="form-group">
			<input asp-for="Email" placeholder="Почта" />
			<span asp-validation-for="Email" class="error"></span>
		</div>

		<div class="form-group">
			<input asp-for="Password" placeholder="Пароль" />
			<span asp-validation-for="Password" class="error"></span>
		</div>

		<div class="form-group">
			<input asp-for="ConfirmPassword" placeholder="Повторите пароль" />
			<span asp-validation-for="ConfirmPassword" class="error"></span>
		</div>

		@if (!ViewData.ModelState.IsValid)
		{
			<div class="error">
				
			</div>
		}
		
		<button type="submit">Зарегистрироваться</button>
	</form>

	<button type="button" onclick="location.href='@Url.Page("/Login")'">Авторизоваться</button>

</div>
